.container
	display table
	.col
		display table-cell
		vertical-align top
		width 1%

// my changes

.form
	.chapter_header
		margin-bottom 12px
		font-size 1.020em
		font-weight bold
	.chapter_description
		margin-bottom 22px
		color #3d3d3d
		font-size 14px
		line-height 22px
		position relative
		padding-left 18px
		&:before
			position absolute
			top 0
			left 0
			content '*'
			width 18px
			font-size 36px
			line-height: 100%;
	&__row
		margin-bottom 5px
	&__label
		font-weight bold
	&__input--text
			background transparent url(../images/input_underline.jpg) center bottom repeat-x
			border 0
			font-family "Courier New", Courier, monospace
			font-size 30px
			
	// checkboxes & radio styling

	&__input--checkbox,
	&__input--radio
		display none

	&__input--checkbox
		&:checked
			& + .label--checkbox
				&:after
					opacity 1

	&__input--radio
		&:checked
			& + .label--radio
				&:after
					opacity 1

	.label--checkbox
		position relative
		display inline-block
		padding-left 27px
		cursor pointer
		color #000
		font-size 21px
		line-height 25px
		&:before
			position absolute
			top 3px
			left 1px
			content ''
			sprite $checkbox-bg
		&:after
			position absolute
			top -3px
			left 0
			margin -3px 0 0 5px
			opacity 0
			content ''
			sprite $checkbox-check

	.label--radio
		position relative
		padding-left 33px
		margin-right 16px
		cursor pointer
		&:before
			position absolute
			top 3px
			left 0
			content ''
			sprite $radio-bg
		&:after
			position absolute
			top 3px
			left 0
			margin 7px
			opacity 0
			content ''
			sprite $radio-dot
			

	&__chapter--main_info
		margin-bottom 50px
		.form__label
			display inline-block
			padding-right 15px
			vertical-align bottom
			white-space nowrap
			font-size 1.020em
			line-height 30px
		.form__input--text
			height 56px
			padding 11px 13px

		.filling_date
			.form__input--text
				width 205px
		
	&__row.inputs_width--fullwidth
		display table	
		width 100%
		label
			display table-cell
			width 1%
		input
			display table-cell
			width 100%

	&__chapter--htmlacademy
		margin-bottom 37px
		.chapter_header
			display inline-block
			padding-right 24px
			
	&__chapter--practic_skills
		margin-bottom 68px
		.container
			.col1
				width 260px
			.col2
				width 278px
				margin-left 10px
				margin-right 10px
			.col3
				width auto
		.form__row
			margin-bottom 10px
				
	&__chapter--javascript_skills
		margin-bottom 32px
		padding-left: 13px;
		.chapter_header
			margin-bottom 27px
		.slider
			position relative
			left -6px
			height 17px
			cursor pointer
			.ui-slider-handle
				position absolute
				cursor pointer
				sprite $skills_selector_pointer
		.skills_selector
			position relative
			background transparent url(../images/input_underline.jpg) center top repeat-x
			&__item
				position relative
				display inline-block
				vertical-align top
				&:before
					position absolute
					top 1px
					left 4px
					width 0
					height 10px
					content ''
					border-left 2px solid #41261f
				&:first-child:before
					content none
				&_label
					display block
					padding-top 28px
					font-size 13px
					line-height 19px
					cursor pointer
			&:before
				position absolute
				top 1px
				left 0
				width 100%
				height 22px
				content ''
				border-left 2px solid #41261f
				border-right 2px solid #41261f
			&__item.item0
				width 140px
			&__item.item1
				width 220px
			&__item.item2
				width 230px
			&__item.item3
				float right
				text-align right
				&:before
					content none