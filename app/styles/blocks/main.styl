			.col2
				width 278px
				margin-left 10px
				margin-right 10px
			.col3
				width auto
		.form_row
			margin-bottom 13px
				
	&_chapter__javascript_skills
		margin-bottom 32px
		padding-left: 13px;
		.chapter_header
			margin-bottom 27px
		.slider
			position relative
			left -6px
			height 17px
			cursor pointer
			.ui-slider-handle
				position absolute
				cursor pointer
				sprite $skills_selector_pointer
		.skills_selector
			position relative
			background transparent url(../images/input_underline.jpg) center top repeat-x
			&_item
				position relative
				display inline-block
				vertical-align top
				&:before
					position absolute
					top 1px
					left 4px
					width 0
					height 10px
					content ''
					border-left 2px solid #41261f
				&:first-child:before
					content none
				&_input
					display none
				&_label
					display block
					padding-top 28px
					font-size 13px
					line-height 19px
					cursor pointer
			&:before
				position absolute
				top 1px
				left 0
				width 100%
				height 22px
				content ''
				border-left 2px solid #41261f
				border-right 2px solid #41261f
			&_item.item0
				width 144px
			&_item.item1
				width 225px
			&_item.item2
				width 230px
			&_item.item3
				float right
				text-align right
				&:before
					content none
			
// checkboxes & radio styling sprite $filename

.input-checkbox,
.input-radio
	display none

.input-checkbox
	&:checked
		& + .checkbox
			&:after
				opacity 1

.input-radio
	&:checked
		& + .radio
			&:after
				opacity 1

.checkbox
	position relative
	display inline-block
	padding-left 27px
	cursor pointer
	color #000
	font-size 21px
	&:before
		position absolute
		top 3px
		left 1px
		content ''
		sprite $checkbox-bg
	&:after
		position absolute
		top -3px
		left 0
		margin -3px 0 0 5px
		opacity 0
		content ''
		sprite $checkbox-check

.radio
	position relative
	padding-left 33px
	margin-right 16px
	cursor pointer
	&:before
		position absolute
		top 3px
		left 0
		content ''
		sprite $radio-bg
	&:after
		position absolute
		top 3px
		left 0
		margin 7px
		opacity 0
		content ''
		sprite $radio-dot
