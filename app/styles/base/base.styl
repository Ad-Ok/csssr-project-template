body
	color #2e1a15
	font-family PT Sans, sans-serif
	background-color #797979
	cursor default

	@media screen and (max-width: 540px)
		padding-top 0
		padding-bottom 0

.main
	margin-left auto
	margin-right auto
	padding-left 110px
	padding-right 120px
	padding-bottom 30px
	max-width 1000px
	font-size 22px
	background-color #efd49f
	background-image url(../images/pattern.jpg)

	&::selection
		background-color #ffffd0

	@media screen and (max-width: 540px)
		padding-top 40px
		padding-bottom 40px
		border-radius 0
		box-shadow none

.h1
	margin-left -20px
	margin-right -20px
	margin-bottom 20px
	padding 20px
	font-size 28px
	font-weight bold
	text-align center

.h2
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.h3
	margin-bottom 10px
	padding-left 20px
	padding-right 20px
	font-size 18px
	font-weight bold

	@media screen and (max-width: 540px)
		text-align center

a
	color #014f98
		
.description
	margin-bottom 40px
	font-size 18px
	text-align center

.mark
	padding 0 4px
	font-weight bold
	text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
	border-radius 4px
	background-color #e8e8e8

	&::selection
		background-color rgba(0, 0, 0, .1)
